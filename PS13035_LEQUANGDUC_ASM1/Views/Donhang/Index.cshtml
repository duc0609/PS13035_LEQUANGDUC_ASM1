@model IEnumerable<PS13035_LEQUANGDUC_ASM1.Models.Donhang>

@{
    ViewData["Title"] = "Index";
}

<h1>Trang Chủ -Đơn Hàng </h1>

<p>
    <a asp-action="Create">Tạo Đơn Hàng </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngaydat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tongtien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.trangThaiDonHang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ghichu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.khachhang)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ngaydat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tongtien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.trangThaiDonHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ghichu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.khachhang.ConfirmPassword)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DonhangID">Chỉnh Sửa</a> |
                <a asp-action="Details" asp-route-id="@item.DonhangID">Chi tiết</a> |
                <a asp-action="Delete" asp-route-id="@item.DonhangID">Xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
