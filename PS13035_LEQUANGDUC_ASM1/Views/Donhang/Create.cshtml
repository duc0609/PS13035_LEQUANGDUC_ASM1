@model PS13035_LEQUANGDUC_ASM1.Models.Donhang

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo Đơn Hàng </h1>

<h4>Donhang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KhachhangID" class="control-label"></label>
                <select asp-for="KhachhangID" class ="form-control" asp-items="ViewBag.KhachhangID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ngaydat" class="control-label"></label>
                <input asp-for="Ngaydat" class="form-control" />
